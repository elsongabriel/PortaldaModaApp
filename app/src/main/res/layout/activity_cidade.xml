<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCaruaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="145dp"
        android:text="@string/str_caruaru" />

    <Button
        android:id="@+id/btnSantaC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCaruaru"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/str_santac" />

    <Button
        android:id="@+id/btnToritama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSantaC"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/str_toritama" />

    <ImageView
        android:id="@+id/imgViewBanner1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtInfoCidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imgViewBanner1"
        android:layout_alignLeft="@+id/imgViewBanner1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imgViewBanner1"
        android:layout_alignStart="@+id/imgViewBanner1"
        android:layout_marginTop="44dp"
        android:text="@string/str_infocidade"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAlignment="center" />

</RelativeLayout>